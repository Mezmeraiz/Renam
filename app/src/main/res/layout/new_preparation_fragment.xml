<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView" >

        <RelativeLayout
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF">

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="330dp"
                android:id="@+id/listView_add_reagent"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/editText_dimension"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Название препарата"
                android:id="@+id/textView"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textSize="20dp" />

            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText_preparation_name"
                android:layout_below="@+id/textView"
                android:layout_centerHorizontal="true"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Объем препарата"
                android:id="@+id/textViewDimension"
                android:layout_below="@+id/editText_preparation_name"
                android:layout_centerHorizontal="true"
                android:textSize="20dp" />

            <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText_dimension"
                android:layout_below="@+id/textViewDimension"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:inputType="number" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/imageView_save_preparation"
                android:background="@drawable/save"
                android:layout_below="@+id/listView_add_reagent"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/textViewDimension"
                android:layout_alignStart="@+id/textViewDimension" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/imageView_add_new_reagent"
                android:background="@drawable/add"
                android:layout_below="@+id/listView_add_reagent"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/textViewDimension"
                android:layout_alignEnd="@+id/textViewDimension" />
        </RelativeLayout>


    </ScrollView>
</LinearLayout>